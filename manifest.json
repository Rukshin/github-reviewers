{
	"name": "Github reviewers",
	"version": "0.1.1",
	"description": "Add reviewrs to your Pull Requests",
	"permissions": ["activeTab", "declarativeContent", "storage"],
	"options_page": "options.html",
	 "background": {
      "scripts": ["background.js"],
      "persistent": true
    },
    "icons": {
      "16": "images/eye16.png",
      "32": "images/eye32.png",
      "48": "images/eye48.png",
      "128": "images/eye128.png"
    },
    "content_scripts": [
    	{
    		"matches": ["https://github.com/holaluz/*"],
    		"js": ["content.js"],
    		"run_at": "document_end"
    	}
    ],
	"manifest_version": 2
}
